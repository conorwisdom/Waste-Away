<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:elevation="15dp">

    <LinearLayout
        android:id="@+id/linlay1_exchange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exchange_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/exchange_layout_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/exchange_layout_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Category"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exchange_layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Location"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exchange_layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exchange_layout_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="User Username"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exchange_layout_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Phone"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/exchange_layout_user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Comments"
            android:textAlignment="center"
            android:textSize="16sp"/>

    </LinearLayout>

