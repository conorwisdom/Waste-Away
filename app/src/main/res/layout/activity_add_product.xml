<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_add_products_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".User.AddProductActivity">

    <RelativeLayout
        android:id="@+id/rellay1_add_product"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/grad_background">

        <ImageView
            android:id="@+id/iv_add_product_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_back"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:paddingTop="10dp"
            android:text="Add Product"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_user_select_product"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rellay1_add_product"
        android:cropToPadding="false"
        android:src="@drawable/ic_select_product_image" />

    <EditText
        android:id="@+id/product_layout_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_user_select_product"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Product Name"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_layout_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/product_layout_name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Product Category"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_layout_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/product_layout_category"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Product Location"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_layout_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/product_layout_location"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Product Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_layout_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/product_layout_description"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_layout_user_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/product_layout_username"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Contact Number (optional)"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/product_layout_user_comments"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/product_layout_user_phone"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/et_background"
        android:backgroundTint="@color/lightGrey"
        android:fontFamily="sans-serif-light"
        android:hint="Comments (exchange preferences, etc)"
        android:inputType=""
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_product"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/gradStart"
            android:fontFamily="sans-serif-light"
            android:text="Add Product"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>